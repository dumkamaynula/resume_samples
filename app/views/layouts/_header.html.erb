<header>
    <div class="navbar-fixed">
      <nav style="background: rgba(255,255,255,0.5);">
        <div class="nav-wrapper"> <a href="#!" class="brand-logo" style="color:black;">Logo</a>
          <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons" style="color:black;">menu</i></a>

          <ul class="right hide-on-med-and-down">
            <li class="<%= 'active' if current_page?(root_path)%>"><%= link_to t(:main), root_url, style:"color: black;"%></li>
            <li class="<%= 'active' if current_page?(new_post_path) or (@post.present? and current_page?(post_path(@post))) or current_page?(posts_path)%>"><%= link_to t(:news), posts_path, style:"color: black;"%></li>
            <li class="<%= 'active' if current_page?(new_album_path) or (@album.present? and current_page?(album_path(@album))) or current_page?(albums_path)%>"><%= link_to t(:gallery), albums_path, style:"color: black;"%></li>
            <li class="<%= 'active' if current_page?(new_entertainment_path) or (@entertainment.present? and current_page?(entertainment_path(@entertainment))) or current_page?(entertainments_path)%>"><%= link_to t(:entertainment), entertainments_path, style:"color: black;"%></li>
            <li class="<%= 'active' if current_page?(new_booking_post_path) or (@booking_post.present? and current_page?(booking_post_path(@booking_post))) or current_page?(booking_posts_path)%>"><%= link_to t(:booking), booking_posts_path, style:"color: black;"%></li>
            <li class="<%= 'active' if current_page?(contacts_path)%>"><%= link_to t(:contacts), contacts_path, style:"color: black;"%></li>

            <%if current_page?(locale: :ua) == false%>
              <li style="color: black;"><%= link_to "UA", locale: :ua %></li>
            <% end %>


            <%if current_page?(locale: :ru) == false %>
              <li style="color: black;"><%= link_to "RU", locale: :ru %></li>
            <% end %>
            <% if current_user.present? and current_user.admin? %>
            <li>
              <a class="dropdown-button" href="#!" data-activates="account-dropdown">Administrator</a>
              <ul id="account-dropdown" class="dropdown-content">
                  
                  <li class="<%= 'active' if current_page?(reservations_path)%>"><%= link_to t(:reservation_list), reservations_path, style:"color: black;"%></li>
                  <li class="<%= 'active' if current_page?(contact_us_path)%>"><%= link_to t(:contact_us), contact_us_path, style:"color: black;"%></li>
                  
                <% if logged_in? %>
                  <li class="<%= 'active' if (current_user.present? and current_page?(edit_user_path(current_user)))%>"><%= link_to t(:settings), edit_user_path(current_user), style:"color: black;" %></li>
                  <li><%= link_to t(:logout), logout_path, method: "delete", style:"color: black;" %></li>
                <% end %>
              </ul>
            </li>
            <% end %>
            </ul>
          </div>
      </nav>
    </div>
    <ul class="side-nav" id="mobile-demo">
      <li class="<%= 'active' if current_page?(root_path)%>"><%= link_to t(:main), root_path, style:"color: black;"%></li>
      <li class="<%= 'active' if current_page?(new_post_path) or (@post.present? and current_page?(post_path(@post))) or current_page?(posts_path)%>"><%= link_to t(:news), posts_path, style:"color: black;"%></li>
      <li class="<%= 'active' if current_page?(new_album_path) or (@album.present? and current_page?(album_path(@album))) or current_page?(albums_path)%>"><%= link_to t(:gallery), albums_path, style:"color: black;"%></li>
      <li class="<%= 'active' if current_page?(new_entertainment_path) or (@entertainment.present? and current_page?(entertainment_path(@entertainment))) or current_page?(entertainments_path)%>"><%= link_to t(:entertainment), entertainments_path, style:"color: black;"%></li>
      <li class="<%= 'active' if current_page?(new_booking_post_path) or (@booking_post.present? and current_page?(booking_post_path(@booking_post))) or current_page?(booking_posts_path)%>"><%= link_to t(:booking), booking_posts_path, style:"color: black;"%></li>
      <li lass="<%= 'active' if current_page?(contacts_path)%>"><%= link_to t(:contacts), contacts_path, style:"color: black;"%></li>

      <%= content_tag :li do %>
      <%= link_to "UA", locale: :ua%>
      <%end unless current_page?(locale: :ua)%>

      <%= content_tag :li do %>
      <%= link_to "RU", locale: :ru%>
      <%end unless current_page?(locale: :ru)%>
      <% if current_user.present? and current_user.admin? %>
        <li class="<%= 'active' if current_page?(reservations_path)%>"><%= link_to t(:reservation_list), reservations_path, style:"color: black;"%></li>
        <li class="<%= 'active' if current_page?(contact_us_path)%>"><%= link_to t(:contact_us), contact_us_path, style:"color: black;"%></li>
      <% end %>
      <% if logged_in? %>
      <li class="<%= 'active' if (current_user.present? and current_page?(edit_user_path(current_user)))%>"><%= link_to t(:settings), edit_user_path(current_user), style:"color: black;" %></li>
      <li><%= link_to t(:logout), logout_path, method: "delete", style:"color: black;" %></li>
      <% end %>
    </ul>
</header>

